<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.activityTambahkopi"
    android:background="@color/abu">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_white"
        app:layout_constraintTop_toTopOf="@id/tv_tambahkopil"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tv_tambahkopil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Tambah Kopi"
        android:fontFamily="@font/poppinsextra"
        android:textColor="@color/abu3"
        android:textSize="19sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_namakopi1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Kopi"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="18sp"
        android:textColor="@color/abu3"
        app:layout_constraintTop_toBottomOf="@id/tv_tambahkopil"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_namakopi"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_namakopi1"
        android:layout_centerInParent="true"
        app:cardCornerRadius="8dp"
        android:background="#E3E3E3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/et_namakopi"
            style="italic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/abu2"
            android:padding="8dp"
            android:gravity="top"
            android:textColor="@color/white"
            android:textColorHint="@color/black"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_asalkopi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asal Kopi"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="18sp"
        android:textColor="@color/abu3"
        app:layout_constraintTop_toBottomOf="@id/cv_namakopi"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_asalkopi"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_asalkopi"
        android:layout_centerInParent="true"
        app:cardCornerRadius="8dp"
        android:background="#E3E3E3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/et_asalkopi"
            style="italic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/abu2"
            android:padding="8dp"
            android:gravity="top"
            android:textColor="@color/white"
            android:textColorHint="@color/black"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsi"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="18sp"
        android:textColor="@color/abu3"
        app:layout_constraintTop_toBottomOf="@id/cv_asalkopi"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_deskripsi"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_deskripsi"
        android:layout_centerInParent="true"
        app:cardCornerRadius="8dp"
        android:background="#E3E3E3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/et_deskripsi"
            style="italic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/abu2"
            android:padding="8dp"
            android:gravity="top"
            android:textColor="@color/white"
            android:textColorHint="@color/black"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_fotokopi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="URL Foto Kopi"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="18sp"
        android:textColor="@color/abu3"
        app:layout_constraintTop_toBottomOf="@id/cv_deskripsi"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_fotokopi"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_fotokopi"
        android:layout_centerInParent="true"
        app:cardCornerRadius="8dp"
        android:backgroundTint="@color/abu2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/et_gambarKopi"
            style="italic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="https://cdn-2.tstatic.net/bali/foto/bank/images/kopi-kintamani-salah-satu-kopi-yang-digemari-di-luar-negeri.jpg"
            android:background="@color/abu2"
            android:padding="8dp"
            android:gravity="top"
            android:textColor="@color/white"
            android:textColorHint="@color/black"/>

<!--        <Button-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:text="Lampirkan File"-->
<!--            android:textColor="@color/abu"-->
<!--            android:backgroundTint="@color/abu3"/>-->
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:background="@drawable/rounded"
        app:backgroundTint="@color/white"
        android:text="Submit"
        android:textSize="18sp"
        android:textColor="@color/item"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cv_fotokopi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>