<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/item"
    android:layout_gravity="center"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Hi User Pop"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/poppinsregular"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_user"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:src="@drawable/testdhy"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_namaUser"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ci_user"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="36dp"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/abu">

        <TextView
            android:id="@+id/tv_namaUser"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableStart="@drawable/user"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:text="Muhmmad Azril Fahrezi"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:textSize="16sp"
            android:gravity="center_vertical"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_emailUser"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv_namaUser"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="36dp"
        app:cardUseCompatPadding="true"
        android:backgroundTint="@color/abu">

        <TextView
            android:id="@+id/tv_emailuser"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableStart="@drawable/email_24"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:layout_marginLeft="8dp"
            android:text="mazrilfahrezi@mhs.,dp.ac.id"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:textSize="16sp"
            android:gravity="center_vertical"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:background="@drawable/rounded"
        android:text="LOGOUT"
        android:width="300dp"
        app:backgroundTint="@color/abu2"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/poppinsbold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>